FROM ghcr.io/jalt007/php-sys-dep:latest AS php-system-setup

# Install supervisord implementation
COPY --from=ochinchina/supervisord:latest /usr/local/bin/supervisord /usr/local/bin/supervisord

# Install caddy
COPY --from=caddy:2.2.1 /usr/bin/caddy /usr/local/bin/caddy
RUN setcap 'CAP_NET_BIND_SERVICE=+ep' /usr/local/bin/caddy

# Install ffmpeg
COPY --from=mwader/static-ffmpeg:4.3.1-2 /ffmpeg /usr/local/bin/
COPY --from=mwader/static-ffmpeg:4.3.1-2 /ffprobe /usr/local/bin/

# Install composer
COPY --from=composer/composer:2 /usr/bin/composer /usr/local/bin/composer
ARG COMPOSER_AUTH
ENV COMPOSER_AUTH=${COMPOSER_AUTH}

FROM php-system-setup AS app-setup

# Set working directory
ENV LARAVEL_PATH=/srv/app
WORKDIR $LARAVEL_PATH

# Set cron job
RUN echo "* * * * * /usr/local/bin/php /srv/app/artisan schedule:run >> /dev/null 2>&1" | install -D /dev/stdin /home/www-data/crontabs/www-data \
    && chown -R www-data:www-data /home/www-data/crontabs/www-data \
    && chown www-data:www-data /usr/sbin/crond && setcap cap_setgid=ep /usr/sbin/crond

# Install app dependencies
COPY composer.json composer.lock ./
RUN chown -R www-data:www-data $LARAVEL_PATH
USER www-data
RUN composer install --prefer-dist --no-scripts --no-dev --no-autoloader
RUN rm -rf /home/www-data/.composer

# Copy app
COPY --chown=www-data:www-data . $LARAVEL_PATH/
COPY ./.deploy/config/php/local.ini /usr/local/etc/php/conf.d/local.ini

# Set any ENVs
ARG APP_KEY=${APP_KEY}
ARG APP_NAME=${APP_NAME}
ARG APP_URL=${APP_URL}
ARG APP_ENV=${APP_ENV}
ARG APP_DEBUG=${APP_DEBUG}

ARG LOG_CHANNEL=${LOG_CHANNEL}

ARG DB_CONNECTION=${DB_CONNECTION}
ARG DB_HOST=${DB_HOST}
ARG DB_PORT=${DB_PORT}
ARG DB_DATABASE=${DB_DATABASE}
ARG DB_USERNAME=${DB_USERNAME}
ARG DB_PASSWORD=${DB_PASSWORD}

ARG BROADCAST_DRIVER=${BROADCAST_DRIVER}
ARG QUEUE_CONNECTION=${QUEUE_CONNECTION}
ARG SESSION_DRIVER=${SESSION_DRIVER}
ARG SESSION_LIFETIME=${SESSION_LIFETIME}

ARG REDIS_HOST=${REDIS_HOST}
ARG REDIS_PASSWORD=${REDIS_PASSWORD}
ARG REDIS_PORT=${REDIS_PORT}

ARG MAIL_MAILER=${MAIL_MAILER}
ARG MAIL_HOST=${MAIL_HOST}
ARG MAIL_PORT=${MAIL_PORT}
ARG MAIL_USERNAME=${MAIL_USERNAME}
ARG MAIL_PASSWORD=${MAIL_PASSWORD}
ARG MAIL_ENCRYPTION=${MAIL_ENCRYPTION}
ARG MAIL_FROM_ADDRESS=${MAIL_FROM_ADDRESS}
ARG MAIL_ENCRYPTION=${MAIL_ENCRYPTION}
ARG MAIL_FROM_NAME=${APP_NAME}

ARG PUSHER_APP_ID=${PUSHER_APP_ID}
ARG PUSHER_APP_KEY=${PUSHER_APP_KEY}
ARG PUSHER_APP_SECRET=${PUSHER_APP_SECRET}
ARG PUSHER_APP_CLUSTER=${PUSHER_APP_CLUSTER}

ARG AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
ARG AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
ARG AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION}
ARG AWS_BUCKET=${AWS_BUCKET}
ARG AWS_URL=${AWS_URL}

ARG S3_PUBLIC_ACCESS_KEY_ID=${S3_PUBLIC_ACCESS_KEY_ID}
ARG S3_PUBLIC_SECRET_ACCESS_KEY=${S3_PUBLIC_SECRET_ACCESS_KEY}
ARG S3_PUBLIC_DEFAULT_REGION=${S3_PUBLIC_DEFAULT_REGION}
ARG S3_PUBLIC_BUCKET=${S3_PUBLIC_BUCKET}
ARG S3_PUBLIC_URL=${S3_PUBLIC_URL}

ARG S3_UPLOADS_ACCESS_KEY_ID=${S3_UPLOADS_ACCESS_KEY_ID}
ARG S3_UPLOADS_SECRET_ACCESS_KEY=${S3_UPLOADS_SECRET_ACCESS_KEY}
ARG S3_UPLOADS_DEFAULT_REGION=${S3_UPLOADS_DEFAULT_REGION}
ARG S3_UPLOADS_BUCKET=${S3_UPLOADS_BUCKET}
ARG S3_UPLOADS_URL=${S3_UPLOADS_URL}

ARG S3_VIDEO_ACCESS_KEY_ID=${S3_VIDEO_ACCESS_KEY_ID}
ARG S3_VIDEO_SECRET_ACCESS_KEY=${S3_VIDEO_SECRET_ACCESS_KEY}
ARG S3_VIDEO_DEFAULT_REGION=${S3_VIDEO_DEFAULT_REGION}
ARG S3_VIDEO_BUCKET=${S3_VIDEO_BUCKET}
ARG S3_VIDEO_URL=${S3_VIDEO_URL}

ARG STRIPE_CLIENT_ID=${STRIPE_CLIENT_ID}
ARG STRIPE_SECRET=${STRIPE_SECRET}
ARG STRIPE_KEY=${STRIPE_KEY}
ARG STRIPE_WEBHOOKS_CONNECT_SIGNING_SECRET=${STRIPE_WEBHOOKS_CONNECT_SIGNING_SECRET}

ARG PADDLE_VENDOR_ID=${PADDLE_VENDOR_ID}
ARG PADDLE_VENDOR_AUTH_CODE=${PADDLE_VENDOR_AUTH_CODE}
ARG PADDLE_PUBLIC_KEY=${PADDLE_PUBLIC_KEY}

ARG TELESCOPE_ENABLED=${TELESCOPE_ENABLED}
ARG DEBUGBAR_ENABLED=${DEBUGBAR_ENABLED}

ARG FFMPEG_PATH=${FFMPEG_PATH}
ARG FFPROBE_PATH=${FFPROBE_PATH}

RUN composer dump-autoload --no-interaction --no-dev --optimize
ARG CACHE_DRIVER=${CACHE_DRIVER}

# Start app
EXPOSE 80
COPY ./.deploy/entrypoint.sh /

ENTRYPOINT ["sh", "/entrypoint.sh"]
